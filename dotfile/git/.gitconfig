[user]
    name = Avimitin
    email = dev@avimit.in
    signingkey = 0xFF7883E3BF6835DD
[commit]
    gpgSign = true
    #template = /home/sh1marin/.config/.gittemplate
    verbose = true
[init]
    defaultBranch = master
[format]
    signOff = true
[alias]
    a = add
    br = branch
    c = commit
    cm = commit -m
    cl = clone
    l = log --graph --oneline
    p = push
    pp = pull
    pu = push --set-upstream
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    sw = switch

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
