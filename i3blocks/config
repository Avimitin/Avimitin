align=center
separator=false
color=#E6E1CF
separator_block_width=35
markup=pango

[battery]
command=$HOME/scripts/battery2
markup=pango
interval=30

[root]
command=df -h / | awk 'FNR==2{print $4}'
interval=3
label=<span color="#E6E1CF"> </span>

[cpu_load]
command=sar -u 1 1 | awk 'FNR == 5 { printf "%4.1f <span>%</span>\n", (100 - $8) } '
interval=2
label=<span color="#E6E1CF"></span>

#[cpu_temperature]
#command=sensors | awk '{ if ($1 == "CPU" && $2 == "Temperature:") { gsub(/[+°C]/, "") ; printf "%i<span color=\"E6E1CF\">糖 </span>\n", $3 } }'
#interval=2

[memory]
command=free -h --si | awk 'FNR==2{ print $0 }' | awk '{ print $7 }'
interval=2
label=<span color="#E6E1CF"> </span>

#[volume]
#command=pulseaudio-ctl full-status | awk '{ printf "%i%\n", $1 }'
#interval=1
#label=<span color="#ffb86c"> </span>

[date]
command=printf "<span color=\"#E6E1CF\">%s</span>\n" "$(date '+%Y/%B/%d %I:%M')"
interval=60
label=<span color="#E6E1CF"> </span>
